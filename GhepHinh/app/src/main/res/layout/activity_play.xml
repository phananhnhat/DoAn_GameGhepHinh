        <Button
            android:id="@+id/map_5"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/map_8"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <Button
            android:id="@+id/map_3"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/map_6"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
        <Button
            android:id="@+id/map_9"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
